@model List<ContactUsMessage>
@{
    int index = 1;
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">پیام ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover table-bordered bg-info">
                <thead class="">
                    <tr>
                        <th>ردیف</th>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>موضوع</th>
                        <th>پیام</th>
                        <th>تاریخ ثبت</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@(index++)</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td>@item.RegisterDate</td>
                            <td><a href="/Dashboard/ContactUsMessages/Index/@item.ID" class="btn btn-danger btn-sm">حذف</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

}


