@model List<Product>
@{
    int index = 1;
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">کالاها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        @if (Request.QueryString["success"] == "true")
        {
            <div class="alert alert-success">با موفقیت حذف شد</div>
        }
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover table-bordered bg-info">
                <thead class="">
                    <tr>
                        <th>ردیف</th>
                        <th>نام</th>
                        <th>تعداد</th>
                        <th>تاریخ ثبت</th>
                        <th>فعال</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(index++)</td>
                            <td>@item.Title</td>
                            <td>@item.Count</td>
                            <td>@item.RegisterDate.ToString()</td>
                            <td>@Html.CheckBox("active" + item.ID, item.IsActive, new { disabled = "disabled" })</td>
                            <td>
                                <a href="/Dashboard/Products/Edit/@item.ID" class="btn btn-warning btn-sm">ویرایش</a>
                                <a href="/Dashboard/Products/Delete/@item.ID" class="btn btn-danger btn-sm">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

}

