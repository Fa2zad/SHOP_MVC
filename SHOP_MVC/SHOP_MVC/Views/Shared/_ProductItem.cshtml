@model SimpleProduct
<div class="product-list-content">
    <div class="product-media">
        <figure><a href="/Product/@Model.ID"><img src="~/images/Uploads/Products/@Model.Image" alt="@Model.Title" width="182" height="213"></a></figure>
    </div>
    <a href="/Product/@Model.ID" class="feature-slide-name">@Model.Title</a>
    <p class="feature-slide-cost">
        @if (@Model.Count > 0)
        {
            <span class="price">@Model.Price تومان</span>
        }
        else
        {
            <span class="fa fa-remove text-danger"></span><span class="price"> ناموجود</span>
        }
    </p>
    <ul class="product-item-actions">
        <li><a href="#"><i class="flaticon-like"></i></a></li>
        <li><a href="#"><i class="flaticon-arrows"></i></a></li>
        <li><a href="#"><i class="flaticon-commerce"></i></a></li>
    </ul>
</div>

